class Veiculo:
    def __init__(self, tipo):
        self.tipo = tipo

    def especificar(self):
        Pass

class Carro:
    def __init__(self, nome, cor, situacao):
        self.nome = nome
        self.cor = cor
        self.situacao = situacao

    def estado(self):
        print(f"O {self.nome} {self.cor} está {self.situacao} e pode andar!")

class Caminhão:
    def __init__(self, nome, cor, situacao):
        self.nome = nome
        self.cor = cor
        self.situacao = situacao

    def estado(self):
        print(f"O {self.nome} {self.cor} está com {self.situacao} e não pode andar")

